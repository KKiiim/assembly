name:run-tests

on:
  pull_request:
    branches: main
  push:
    branches: main

-name: gcc aarch64
  run: apt-get update -y -qq && apt-get install  gcc-aarch64-linux-gnu g++-aarch64-linux-gnu -y --no-install-recommends
          
-name: install cmake make gcc ... 
  run: apt-get clean && apt-get update -y && apt-get install libgtest-dev cmake make gcc-12 g++-12 build-essential clang-tidy clang-format git sed -y --no-install-recommends

-name: install gTest
  run: cd /usr/src/gtest && cmake CMakeLists.txt && make -j $(nproc) && cp ./lib/*.a /usr/lib

-name: complier
  run: gcc-aarch64-linux-gnu -o qsort/final-qsort/output_file qsort/final-qsort/asmQsort.s qsort/final-qsort/qsort.c

-name: ruun
  run: qsort/final-qsort/output_file
